{
  "main": ".eleventy.js",
  "scripts": {
    "eleventy:dev": "npx eleventy --serve",
    "eleventy:prod": "npx eleventy",
    "prod": "npm-run-all  eleventy:prod sass:prod",
    "sass:dev": "sass --load-path=node_modules --watch --no-source-map --update --style=expanded src/scss:src/css",
    "sass:prod": "sass --load-path=node_modules --load-path=scss --no-source-map --style=compressed sass/scss:sass/css",
    "sass:lint": "stylelint src/scss/**/*.scss",
    "sass:lint:with-fix": "stylelint src/scss/**/*.scss --fix",
    "start": "npm-run-all --parallel eleventy:dev sass:dev"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "sass": "^1.53.0",
    "sprucecss": "^0.10.0",
    "stylelint": "^14.9.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "npm-run-all": "^4.1.5",
    "moment": "^2.29.4"
  }
}
